        <Button x:Name="ButtonResetInventory" Content="ResetInventory" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonResetInventories_Click" Margin="676,123,0,0"/>
        <Label x:Name="Descriptor_GUId" Content="Number of Connection" HorizontalAlignment="Left" Margin="651,47,0,0" VerticalAlignment="Top"/>
        <Label x:Name="TextfieldConCount" Content="0&#xD;&#xA;" HorizontalAlignment="Left" Margin="708,76,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ButtonBuildCharacterFiles" Content="Build CharacterFiles" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonBuildCharacterFiles_Click" Margin="675,148,0,0"/>
    </Grid>
</Window>
